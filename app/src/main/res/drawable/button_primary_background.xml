<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 按钮背景填充颜色 -->
    <solid android:color="@android:color/holo_blue_dark" />
    <!-- 按钮圆角设置 -->
    <corners android:radius="20dp" />
    <!-- 按钮描边（可选），比如设置描边宽度和颜色 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/white" />
</shape>